<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="StockWise.Client.Paginas.ModificarStockPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#0A0F1C">

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="KeypadButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#1E2738" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="FontSize" Value="22" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="WidthRequest" Value="60" />
                <Setter Property="Padding" Value="0" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView Padding="20">

        <VerticalStackLayout Spacing="25">

            <!-- TÃTULO -->
            <Label 
                Text="Modificar Stock"
                HorizontalOptions="Center"
                FontSize="26"
                FontAttributes="Bold"
                TextColor="#4EE1A0"/>

            <!-- DATOS DEL PRODUCTO -->
            <Frame BackgroundColor="#121A2A"
                   Padding="20"
                   CornerRadius="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="8">

                    <Label x:Name="NombreLabel"
                           Text="Nombre"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"/>

                    <Label x:Name="CodigoLabel"
                           Text="CÃ³digo"
                           FontSize="16"
                           TextColor="#7DA0C0"/>

                    <Label Text="Stock actual:"
                           FontSize="16"
                           TextColor="#4EE1A0"
                           FontAttributes="Bold"/>

                    <Label x:Name="StockLabel"
                           FontSize="18"
                           TextColor="#4EE1A0"
                           FontAttributes="Bold"/>
                </VerticalStackLayout>

            </Frame>

            <!-- CAMBIO DE STOCK -->
            <Frame BackgroundColor="#121A2A"
       Padding="15"
       CornerRadius="15"
       HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Modificar cantidad"
               TextColor="White"
               FontSize="18"
               FontAttributes="Bold"/>

                    <!-- CAMPO CANTIDAD -->
                    <Entry x:Name="CantidadEntry"
               Placeholder="Cantidad"
               Keyboard="Numeric"
               BackgroundColor="#0A0F1C"
               TextColor="White"
               PlaceholderColor="#7DA0C0"
               FontSize="24"
               HorizontalTextAlignment="Center"/>

                    <!-- ðŸ”¢ TECLADO NUMÃ‰RICO -->
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
              ColumnDefinitions="*,*,*"
              ColumnSpacing="10"
              RowSpacing="10">

                        <!-- 1 -->
                        <Button Grid.Row="0" Grid.Column="0" Text="1" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>
                        <!-- 2 -->
                        <Button Grid.Row="0" Grid.Column="1" Text="2" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>
                        <!-- 3 -->
                        <Button Grid.Row="0" Grid.Column="2" Text="3" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>

                        <!-- 4 -->
                        <Button Grid.Row="1" Grid.Column="0" Text="4" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>
                        <!-- 5 -->
                        <Button Grid.Row="1" Grid.Column="1" Text="5" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>
                        <!-- 6 -->
                        <Button Grid.Row="1" Grid.Column="2" Text="6" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>

                        <!-- 7 -->
                        <Button Grid.Row="2" Grid.Column="0" Text="7" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>
                        <!-- 8 -->
                        <Button Grid.Row="2" Grid.Column="1" Text="8" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>
                        <!-- 9 -->
                        <Button Grid.Row="2" Grid.Column="2" Text="9" Style="{StaticResource KeypadButton}" Clicked="KeypadClicked"/>

                        <!-- BORRAR -->
                        <Button Grid.Row="3" Grid.Column="0"
                    Text="âŒ«"
                    BackgroundColor="#c62828"
                    TextColor="White"
                    CornerRadius="12"
                    Clicked="KeypadDelete"/>

                        <!-- 0 -->
                        <Button Grid.Row="3" Grid.Column="1"
                    Text="0"
                    Style="{StaticResource KeypadButton}"
                    Clicked="KeypadClicked"/>

                        <!-- LIMPIAR -->
                        <Button Grid.Row="3" Grid.Column="2"
                    Text="CLR"
                    BackgroundColor="#c62828"
                    TextColor="White"
                    CornerRadius="12"
                    Clicked="KeypadClear"/>
                    </Grid>

                    <!-- BOTÃ“N: AÃ‘ADIR -->
                    <Button Text="AÃ±adir"
                Clicked="OnAddClicked"
                BackgroundColor="#4EE1A0"
                TextColor="#0A0F1C"
                CornerRadius="12"
                Padding="12,6"/>

                    <!-- BOTÃ“N: RESTAR -->
                    <Button Text="Restar"
                Clicked="OnRemoveClicked"
                BackgroundColor="#c62828"
                TextColor="White"
                CornerRadius="12"
                Padding="12,6"/>

                </VerticalStackLayout>

            </Frame>


            <!-- BOTÃ“N GUARDAR -->
            <Button Text="ðŸ’¾ Guardar Cambios"
                    BackgroundColor="#4EE1A0"
                    TextColor="#0A0F1C"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="18"
                    Clicked="GuardarCambios"/>

            <!-- BOTÃ“N CANCELAR -->
            <Button Text="Cancelar"
                    BackgroundColor="#c62828"
                    TextColor="White"
                    HeightRequest="46"
                    CornerRadius="18"
                    Clicked="Cancelar"/>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
