<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockWise.Client.Paginas.ProductosPage"
             Title="Productos">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Button Text="ðŸ”„ Actualizar" Clicked="OnRefreshClicked" />
        <CollectionView x:Name="ProductosList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#ccc" CornerRadius="10" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                            <Label Text="{Binding Proveedor}" FontSize="12" />
                            <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label x:Name="MessageLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
