<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockWise.Client.Paginas.ProductosPage"
             Title="Productos">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Cabecera -->
        <Label Text="ðŸ“¦ Lista de Productos"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- BotÃ³n de refrescar -->
        <Button Text="ðŸ”„ Refrescar"
                Clicked="OnRefreshClicked"
                BackgroundColor="#0078D7"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="40" />

        <!-- Lista de productos -->
        <CollectionView x:Name="ProductosList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="15" Margin="0,5" HasShadow="True" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding nombre}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding proveedor}" FontSize="14" TextColor="Gray" />
                            <Label Text="{Binding cantidad, StringFormat='Cantidad: {0}'}" />
                            <Label Text="{Binding precio, StringFormat='Precio: {0:C}'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Mensaje -->
        <Label x:Name="MessageLabel"
               FontSize="14"
               TextColor="Red"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
