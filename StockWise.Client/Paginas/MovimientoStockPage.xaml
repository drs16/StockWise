<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StockWise.Client.Paginas.MovimientoStockPage"
    BackgroundColor="#0A0F1C"
    Title="Movimientos de Stock">

    <VerticalStackLayout Padding="25" Spacing="15">

        <!-- TÃTULO -->
        <Label Text="Historial de movimientos"
               FontSize="26"
               FontAttributes="Bold"
               TextColor="#4EE1A0"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <!-- BUSCADOR -->
        <Border Stroke="#121A2A"
                BackgroundColor="#121A2A"
                StrokeShape="RoundRectangle 12"
                Padding="12">

            <Entry x:Name="BuscarEntry"
                   Placeholder="ðŸ” Buscar por usuario..."
                   BackgroundColor="Transparent"
                   TextColor="White"
                   PlaceholderColor="#7DA0C0"
                   FontSize="16"
                   TextChanged="OnBuscarChanged"/>
        </Border>

        <!-- LISTA -->
        <CollectionView x:Name="MovimientosList"
                        VerticalOptions="FillAndExpand"
                        Margin="0,10,0,0">

            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Frame BackgroundColor="#121A2A"
                           CornerRadius="14"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">

                        <VerticalStackLayout Spacing="5">

                            <!-- PRODUCTO -->
                            <Label Text="{Binding NombreProducto}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#4EE1A0"/>

                            <!-- USUARIO -->
                            <Label Text="{Binding NombreUsuario}"
                                   TextColor="White"
                                   FontSize="15"/>

                            <!-- DIFERENCIA (+x / -x unidades) -->
                            <Label Text="{Binding Diferencia}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{Binding ColorCambio}"/>

                            <!-- FECHA -->
                            <Label Text="{Binding FechaFormateada}"
                                   TextColor="#7DA0C0"
                                   FontSize="12"/>
                        </VerticalStackLayout>

                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
