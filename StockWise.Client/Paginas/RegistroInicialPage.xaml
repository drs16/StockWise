<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StockWise.Client.ViewModels"
             x:Class="StockWise.Client.Paginas.RegistroInicialPage">

    <ContentPage.BindingContext>
        <vm:RegistroInicialViewModel />
    </ContentPage.BindingContext>

    <Grid>

        <!-- ðŸŒ… Fondo -->
        <Image Source="fondo.png"
               Aspect="AspectFill"
               Opacity="1" />

        <!-- ðŸ§± CONTENIDO -->
        <ScrollView>

            <VerticalStackLayout Padding="40,40"
                                 Spacing="25"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Start">

                <!-- â­ ENCABEZADO -->
                <Frame Padding="14"
                       BackgroundColor="#BB000000"   
                    CornerRadius="18"
                       HasShadow="False"
                       HorizontalOptions="Center">

                    <VerticalStackLayout Spacing="6" HorizontalOptions="Center">

                        <!-- LOGO -->
                        <Image Source="logo.png"
                               HeightRequest="110"
                               HorizontalOptions="Center" />

                        <!-- TITULO -->
                        <Label Text="Registro Inicial"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />

                        <!-- SUBTITULO -->
                        <Label Text="Complete la informaciÃ³n para registrar su empresa"
                               FontSize="14"
                               TextColor="#E6E6E6"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               WidthRequest="320" />

                        <Label Text="Datos de la empresa"
                               FontAttributes="Bold"
                               FontSize="20"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0" />

                    </VerticalStackLayout>

                </Frame>


                <!-- CAMPOS EMPRESA -->
                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="Nombre de la empresa"
                           Text="{Binding NombreEmpresa}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>

                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="NIF"
                           Text="{Binding Nif}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>

                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="DirecciÃ³n"
                           Text="{Binding Direccion}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>

                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="Email empresa"
                           Keyboard="Email"
                           Text="{Binding EmailEmpresa}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>

                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="TelÃ©fono"
                           Keyboard="Telephone"
                           Text="{Binding TelefonoEmpresa}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>


                <!-- ADMINISTRADOR -->
                <Label Text="Administrador"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,20,0,0" />

                <Label Text="Datos del usuario que gestionarÃ¡ la empresa"
                       FontSize="14"
                       TextColor="#CCCCCC"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10" />


                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="Nombre administrador"
                           Text="{Binding AdminNombre}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>

                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="Email administrador"
                           Keyboard="Email"
                           Text="{Binding AdminEmail}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>

                <Border BackgroundColor="#CC000000"
                        StrokeThickness="1"
                        Stroke="#88FFFFFF"
                        StrokeShape="RoundRectangle 15"
                        Padding="12">
                    <Entry Placeholder="ContraseÃ±a"
                           IsPassword="True"
                           Text="{Binding Password}"
                           TextColor="White"
                           PlaceholderColor="#DDDDDD"
                           FontSize="16" />
                </Border>

                <!-- BOTÃ“N -->
                <Button Text="Crear empresa"
                        Command="{Binding RegistrarCommand}"
                        FontSize="18"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="55"
                        BackgroundColor="#0A84FF"
                        Margin="0,20,0,30"/>

            </VerticalStackLayout>

        </ScrollView>

    </Grid>

</ContentPage>
