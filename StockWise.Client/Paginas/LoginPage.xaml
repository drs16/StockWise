<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockWise.Client.Paginas.LoginPage"
             Title="Inicio de sesi贸n">

    <Grid>
        <!--  Imagen de fondo -->
        <Image Source="fondo.png"
               Aspect="AspectFill"
               Opacity="1"
               ZIndex="0" />

        <!-- П Contenido -->
        <ScrollView ZIndex="1">
            <VerticalStackLayout Padding="40,80"
                                 Spacing="25"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="CenterAndExpand">

                <Image Source="logo.png"
                       HeightRequest="120"
                       HorizontalOptions="Center" />

                <Label Text="StockWise"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White" />

                <Label Text="Inicia sesi贸n para continuar"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="White" />

                <Border StrokeThickness="1"
                        Stroke="#ffffff"
                        StrokeShape="RoundRectangle 15"
                        Padding="10"
                        BackgroundColor="#66000000">
                    <Entry x:Name="EmailEntry"
                           Placeholder="Correo electr贸nico"
                           Keyboard="Email"
                           FontSize="16"
                           TextColor="White" />
                </Border>

                <Border StrokeThickness="1"
                        Stroke="#ffffff"
                        StrokeShape="RoundRectangle 15"
                        Padding="10"
                        BackgroundColor="#66000000">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Contrase帽a"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="White" />
                </Border>

                <Button Text="Iniciar sesi贸n"
                        FontSize="18"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        BackgroundColor="#0078D7"
                        Clicked="OnLoginClicked" />

                <Label x:Name="MessageLabel"
                       TextColor="White"
                       FontSize="14"
                       HorizontalOptions="Center" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
