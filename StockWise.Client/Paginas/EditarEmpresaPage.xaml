<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StockWise.Client.Paginas.EditarEmpresaPage"
    BackgroundColor="#0A0F1C"
    Title="Editar Empresa">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="18">

            <!-- T铆tulo -->
            <Label Text="Editar Empresa"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#4EE1A0"
                   Margin="0,10"/>

            <!-- Campo: Nombre -->
            <Label Text="Nombre" TextColor="#4EE1A0"/>

            <Border Stroke="#121A2A"
                    StrokeThickness="1"
                    BackgroundColor="#121A2A"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <Entry x:Name="NombreEntry"
                       Placeholder="Nombre de la empresa"
                       BackgroundColor="Transparent"
                       TextColor="White"
                       PlaceholderColor="#7DA0C0"/>
            </Border>


            <!-- Campo: NIF -->
            <Label Text="NIF" TextColor="#4EE1A0"/>

            <Border Stroke="#121A2A"
                    StrokeThickness="1"
                    BackgroundColor="#121A2A"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <Entry x:Name="NifEntry"
                       Placeholder="NIF"
                       BackgroundColor="Transparent"
                       TextColor="White"
                       IsReadOnly="True"
                       IsEnabled="False"
                       PlaceholderColor="#7DA0C0"/>
            </Border>


            <!-- Campo: Direcci贸n -->
            <Label Text="Direcci贸n" TextColor="#4EE1A0"/>

            <Border Stroke="#121A2A"
                    StrokeThickness="1"
                    BackgroundColor="#121A2A"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <Entry x:Name="DireccionEntry"
                       Placeholder="Direcci贸n completa"
                       BackgroundColor="Transparent"
                       TextColor="White"
                       PlaceholderColor="#7DA0C0"/>
            </Border>


            <!-- Campo: Email -->
            <Label Text="Email" TextColor="#4EE1A0"/>

            <Border Stroke="#121A2A"
                    StrokeThickness="1"
                    BackgroundColor="#121A2A"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <Entry x:Name="EmailEntry"
                       Placeholder="Correo de contacto"
                       BackgroundColor="Transparent"
                       TextColor="White"
                       PlaceholderColor="#7DA0C0"
                       Keyboard="Email"/>
            </Border>


            <!-- Campo: Tel茅fono -->
            <Label Text="Tel茅fono" TextColor="#4EE1A0"/>

            <Border Stroke="#121A2A"
                    StrokeThickness="1"
                    BackgroundColor="#121A2A"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <Entry x:Name="TelefonoEntry"
                       Placeholder="Tel茅fono"
                       BackgroundColor="Transparent"
                       TextColor="White"
                       PlaceholderColor="#7DA0C0"
                       Keyboard="Telephone"/>
            </Border>


            <!-- Bot贸n guardar -->
            <Button Text=" Guardar cambios"
                    BackgroundColor="#4EE1A0"
                    TextColor="#0A0F1C"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="0,20,0,0"
                    Clicked="OnGuardarClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
