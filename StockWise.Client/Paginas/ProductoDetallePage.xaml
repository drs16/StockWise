<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="StockWise.Client.Paginas.ProductoDetallePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#0A0F1C"
    Title="Detalle del Producto">

    <ScrollView BackgroundColor="#0A0F1C">
        <VerticalStackLayout Padding="25" Spacing="22" BackgroundColor="#0A0F1C">

            <!-- BotÃ³n volver -->
            <Button Text="â† Volver"
                    Clicked="OnVolverClicked"
                    BackgroundColor="#121A2A"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    HorizontalOptions="Start"
                    WidthRequest="120"/>

            <!-- TÃ­tulo -->
            <Label x:Name="NombreLabel"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#4EE1A0"
                   Margin="0,10"/>

            <!-- Imagen del QR -->
            <Frame Padding="15"
                   CornerRadius="20"
                   BackgroundColor="#121A2A"
                   HasShadow="True"
                   HorizontalOptions="Center">
                <Image x:Name="QrImage"
                       HeightRequest="220"
                       WidthRequest="220"/>
            </Frame>

            <!-- Datos del producto -->
            <VerticalStackLayout Spacing="15">

                <!-- Proveedor -->
                <Label Text="Proveedor"
                       FontSize="16"
                       TextColor="#4EE1A0"/>
                <Border Stroke="#121A2A"
                        StrokeThickness="1"
                        BackgroundColor="#121A2A"
                        StrokeShape="RoundRectangle 10"
                        Padding="10">
                    <Label x:Name="ProveedorLabel"
                           TextColor="White"
                           FontSize="16"/>
                </Border>

                <!-- Cantidad -->
                <Label Text="Cantidad"
                       FontSize="16"
                       TextColor="#4EE1A0"/>
                <Border Stroke="#121A2A"
                        StrokeThickness="1"
                        BackgroundColor="#121A2A"
                        StrokeShape="RoundRectangle 10"
                        Padding="10">
                    <Label x:Name="CantidadLabel"
                           TextColor="White"
                           FontSize="16"/>
                </Border>

                <!-- Precio -->
                <Label Text="Precio (â‚¬)"
                       FontSize="16"
                       TextColor="#4EE1A0"/>
                <Border Stroke="#121A2A"
                        StrokeThickness="1"
                        BackgroundColor="#121A2A"
                        StrokeShape="RoundRectangle 10"
                        Padding="10">
                    <Label x:Name="PrecioLabel"
                           TextColor="White"
                           FontSize="16"/>
                </Border>

            </VerticalStackLayout>

            <!-- Botones de acciÃ³n -->
            <HorizontalStackLayout Spacing="15" Margin="0,20,0,0" HorizontalOptions="Center">

                <Button Text="âœ Editar"
                        Clicked="OnEditarClicked"
                        BackgroundColor="#4EE1A0"
                        TextColor="#0A0F1C"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        WidthRequest="130"
                        HeightRequest="50"/>

                <Button Text="ðŸ—‘ Eliminar"
                        Clicked="OnEliminarClicked"
                        BackgroundColor="#c62828"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        WidthRequest="130"
                        HeightRequest="50"/>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
