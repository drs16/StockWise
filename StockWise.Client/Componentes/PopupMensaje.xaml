<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StockWise.Client.Componentes.MensajeModalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#80000000">

    <VerticalStackLayout 
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Padding="20">

        <Frame BackgroundColor="#121A2A"
               CornerRadius="16"
               Padding="20"
               WidthRequest="300">

            <VerticalStackLayout Spacing="15">

                <Label x:Name="TituloLabel"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#4EE1A0"
                       HorizontalOptions="Center"/>

                <Label x:Name="MensajeLabel"
                       FontSize="16"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <!-- Texto copiable -->
                <Entry x:Name="CopiableEntry"
                       IsVisible="False"
                       IsReadOnly="True"
                       TextColor="White"
                       BackgroundColor="#1E2A44"
                       Margin="0,10,0,0"
                       FontSize="16"/>

                <!-- BotÃ³n OK -->
                <Button Text="OK"
                        BackgroundColor="#4EE1A0"
                        TextColor="#0A0F1C"
                        CornerRadius="10"
                        Clicked="OkClicked"/>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
